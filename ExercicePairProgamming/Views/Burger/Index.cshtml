@model List<Burger>

@{
    ViewBag.Title = "Nos Burgers!";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col s12 center">
        @Html.ActionLink("Ajouter", "Create", "Burger", htmlAttributes: new {@class = "btn wave-effect"})
    </div>
</div>

<table class="highlight">
    <thead>
    <tr>
        <th>
            Nom
        </th>
        <th>
            Description
        </th>
        <th>
            Prix
        </th>
        <th>
            Poids
        </th>
        <th>
            Viande
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Count > 0)
    {
        @foreach (Burger burger in Model)
        {
            <tr>
                <td>
                    @burger.Name
                </td>

                <td>
                    @burger.Description
                </td>
                <td>
                    @burger.Price &euro;
                </td>
                <td>
                    @burger.Weight
                </td>
                <td>
                    @burger.BeefWeight
                </td>
                <td>
                    @Html.ActionLink("Modifier", "Edit", "Burger", burger.Id, new {@class = "btn wave-effect"})
                    @Html.ActionLink("Supprimer", "Delete", "Burger", burger.Id, new {@class = "btn wave-effect background-red"})
                </td>
            </tr>
        }
    }
    else
    {
        <h4>Aucun burger n'est disponnible pour le moment!</h4>
    }
    </tbody>
</table>
